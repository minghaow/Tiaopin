#* @vtlvariable name="tagIdMap" type="java.util.Map<java.lang.Long, java.lang.Boolean>" *#
#* @vtlvariable name="AdminUserInfoList" type="java.util.List" *#
#* @vtlvariable name="adminUserInfo" type="nanshen.data.AdminUserInfo" *#
#* @vtlvariable name="lookInfo" type="nanshen.data.LookInfo" *#
#* @vtlvariable name="lookInfoList" type="java.util.List" *#
#* @vtlvariable name="uploader" type="nanshen.data.AdminUserInfo" *#
#* @vtlvariable name="tagIdMap<String, Boolean>" type="java.util.Map<java.lang.String, java.lang.Boolean>" *#

#parse("user/header.vm")
<!-- end of header -->

<!-- some hidden infos -->
<div class="page-info">
    <div id="this-tag">orders</div>
</div>

<!-- page contents -->
<div class="page-content margin-top-small" id="look-detail-page-content">
    <div class="row">
        <div class="large-5 medium-5 small-12 columns detail-image-slider">
            <ul data-orbit class="look-detail-slider"
                data-options="animation:slide;
                  pause_on_hover:true;
                  animation_speed:500;
                  navigation_arrows:false;
                  timer:false;
                  bullets:true;">
                #set ($totalCnt = $lookInfo.imgCount - 1)
                #foreach ($imgId in [0..$totalCnt])
                    <li data-orbit-slide="slide-$imgId">
                        <img src="http://image.lanzhujue.com/images/look/$lookInfo.id/$imgId" />
                    </li>
                #end
            </ul>
        </div>
        <div class="large-7 medium-7 small-12 columns">
            <div class="detail-description text-left">
                <h3 class="greyText"><span style="width: 3px;background-color:#4c8bf2;"></span>$lookInfo.title</h3>
                <hr/>
                <div id="detail-jiathis">
                    <!-- JiaThis Button BEGIN -->
                    <div class="jiathis_style">
                        <a class="jiathis_button_weixin">微信</a>
                        <a class="jiathis_button_cqq">QQ</a>
                        <a class="jiathis_button_ydnote">有道</a>
                        <a class="jiathis_button_renren">人人</a>
                        <a class="jiathis_button_tsina">微博</a>
                        <a class="jiathis_button_douban">豆瓣</a>
                        <a href="http://www.jiathis.com/share?uid=2070144" class="jiathis jiathis_txt jiathis_separator jtico jtico_jiathis" target="_blank">更多</a>
                        <a class="jiathis_counter_style"></a>
                    </div>
                    <script type="text/javascript">
                        var jiathis_config = {
                            summary:"",
                            shortUrl:false,
                            hideMore:false,
                            data_track_clickback:'true'
                        }
                    </script>
                    <script type="text/javascript" src="http://v3.jiathis.com/code/jia.js?uid=2070144" charset="utf-8"></script>
                    <!-- JiaThis Button END -->
                </div>

                <div>&nbsp;</div>
                <div class="margin-top-small greyText">$!{lookInfo.subTitle}</div>
                <div class="margin-top-small greyText">$!{lookInfo.description}</div>
            </div>

            <div class="detail-description margin-top-small text-left">
                <h4 class="greyText">搭配单品</h4>
                <ul class="margin-top-small row thumbnail-wrapper small-block-grid-2 medium-block-grid-3 medium-block-grid-3">
                    #foreach ($skuInfo in $!{lookInfo.getSkuInfoList()})
                        <li>
                            <a class="th radius " href="${skuInfo.url}" target="_blank" title="${skuInfo.title}">
                                <img src="http://image.lanzhujue.com/images/sku/$skuInfo.id/0"/>
                            </a>
                        </li>
                    #end
                    #if ($!{lookInfo.getSkuInfoList().size()} == 0)
                        <a class="th radius" href="#">
                            <img src="" alt="暂无图片"/>
                        </a>
                    #end
                </ul>
            </div>

            <div class="detail-description margin-top-small text-left">
                <h4 class="greyText">标签</h4>
                <div class="margin-top-small row">
                    #foreach ($lookTag in ${lookTagList})
                        <span class="margin-top-tiny look-tag-list">
                            #if (${tagIdMap.get("$lookTag.id")} != "" && ${tagIdMap.get("$lookTag.id")} == true)
                                <input type="checkbox" disabled name="checkbox-$lookTag.id" class="look-tag" data-tag-id="$lookTag.id"
                                       data-labelauty="$lookTag.tagName">
                            #end
                        </span>
                    #end
                    #if (${tagIdMap.size()} == 0)
                        <span class="margin-top-tiny look-tag-list">
                            <input type="checkbox" disabled name="checkbox-1" class="look-tag" data-tag-id="1"
                                   data-labelauty="无">
                        </span>
                    #end
                </div>
            </div>
        </div>

        <div class="item-list row" data-equalizer>
            #foreach ($lookInfo in $lookInfoList)
                <div class="large-4 medium-6 small-12 columns" data-equalizer-watch>
                    <div class="item-image-wrapper">
                        <img src="http://image.lanzhujue.com/images/look/$lookInfo.id/0" alt=""/>
                    </div>
                    <div class="item-description">
                        $lookInfo.title
                        <div>
                            $lookInfo.subTitle
                        </div>
                    </div>
                </div>
            #end
        </div>
    </div>
    #include("msgModal.vm")

</div>
<!-- end of this page contents -->

<!-- start of footer-->
#include("user/footer.vm")