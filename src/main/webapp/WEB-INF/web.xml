<web-app version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>Spring MVC Application</display-name>

	<servlet>
		<servlet-name>resin-file</servlet-name>
		<servlet-class>com.caucho.servlets.FileServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/993eb7f473e652a1a5992e21a97830d1.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/robots.txt</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/favicon.ico</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/images/*.jpg</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/images/*.png</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/images/*.gif</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/images/*.ico</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/static/*.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/css/*.css</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/css/*.woff</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/css/*.ttf</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/css/*.svg</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/css/*.eot</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/script/*.js</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/script/*.swf</url-pattern>
	</servlet-mapping>

	<!-- 加载通用的bean -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:nanshen-servlet.xml</param-value>
	</context-param>

	<!--<listener>-->
		<!--<listener-class>org.springframework.security.web.session.HttpSessionEventPublisher</listener-class>-->
	<!--</listener>-->

	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!--<filter>-->
		<!--<filter-name>springSecurityFilterChain</filter-name>-->
		<!--<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>-->
	<!--</filter>-->
	<!--<filter-mapping>-->
		<!--<filter-name>springSecurityFilterChain</filter-name>-->
		<!--<url-pattern>/*</url-pattern>-->
	<!--</filter-mapping>-->

	<!-- 加载spring mvc bean，注意这里加载的bean不能出现在ContextLoaderListener的配置中，否则会出现重复加载的情况 -->
	<servlet>
		<servlet-name>mvc-dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:nanshen-mvc.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>mvc-dispatcher</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

</web-app>