<web-app version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>Spring MVC Application</display-name>

    <!--<servlet>-->
		<!--<servlet-name>mvc-dispatcher</servlet-name>-->
		<!--<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>-->
        <!--<load-on-startup>1</load-on-startup>-->
	<!--</servlet>-->

	<servlet>
		<servlet-name>mvc-velocity-dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<!--<servlet-mapping>-->
		<!--<servlet-name>mvc-dispatcher</servlet-name>-->
		<!--<url-pattern>/hello</url-pattern>-->
	<!--</servlet-mapping>-->

	<servlet-mapping>
		<servlet-name>mvc-velocity-dispatcher</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>resin-file</servlet-name>
		<servlet-class>com.caucho.servlets.FileServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/robots.txt</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/favicon.ico</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/images/*.jpg</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/images/*.png</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/images/*.gif</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/images/*.ico</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/static/*.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/css/*.css</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/css/*.woff</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/css/*.ttf</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/css/*.svg</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/css/*.eot</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/script/*.js</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resin-file</servlet-name>
		<url-pattern>/script/*.swf</url-pattern>
	</servlet-mapping>

</web-app>